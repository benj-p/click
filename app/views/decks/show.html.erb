<div class="container">
  <div class="row">
    <h1 style="width: 100%"><%= @deck.name %></h1>
    <h2>Section <%= @section.name %></h2>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-4">
      <svg viewBox="0 0 36 36" class="circular-chart">
  <path class="circle circle-green"
    d="M18 2.0845
      a 15.9155 15.9155 0 0 1 0 31.831
      a 15.9155 15.9155 0 0 1 0 -31.831"
    fill="none"
    stroke="#444";
    stroke-width="1";
    stroke-dasharray="<%= (@results[:correct] / @attempts_count.to_f) * 100 %>, 100"
  />
  <text x="9" y="20.35" class="circle-label">Correct</text>
</svg>
    </div>
    <div class="col-sm-12 col-md-4">
      <svg viewBox="0 0 36 36" class="circular-chart">
        <path class="circle circle-red"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
          stroke-dasharray="<%= (@results[:incorrect] / @attempts_count.to_f) * 100 %>, 100"
        />
        <text x="9" y="20.35" class="circle-label">Incorrect</text>
      </svg>
    </div>
    <div class="col-sm-12 col-md-4">
      <svg viewBox="0 0 36 36" class="circular-chart">
  <path class="circle circle-grey"
    d="M18 2.0845
      a 15.9155 15.9155 0 0 1 0 31.831
      a 15.9155 15.9155 0 0 1 0 -31.831"
    fill="none"
    stroke="#444";
    stroke-width="1";
    stroke-dasharray="75, 100"
  />
  <text x="9" y="20.35" class="circle-label">Unsure</text>
</svg>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-5">
      <h3>Attention students</h3>
      <% @results_by_student.each do |result| %>
        <p><%= result[:student].first_name %>:
          <%= result[:results][:correct] %> | <%= result[:results][:incorrect] %> | <%= result[:results][:unsure] %>
        </p>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-5">
      <h3>Attention cards</h3>
      <% @results_by_card.each do |result| %>
        <p><%= result[1][:card].question %>:
          <%= result[1][:results][:correct] %> | <%= result[1][:results][:incorrect] %> | <%= result[1][:results][:unsure] %>
        </p>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-2">
      <h3>Deck info</h3>
      <p>Deck created: <%= time_ago_in_words(@deck.created_at) %> ago</p>
    </div>
  </div>
</div>


