<div class="container">
  <div class="row">
    <h1 style="width: 100%"><%= @deck.name %></h1>
    <h2>Section <%= @section.name %></h2>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-4">
      <%= render 'shared/arc', color: 'green', percentage: (@results[:correct] / @attempts_count.to_f) * 100, text: 'Correct' %>
    </div>
    <div class="col-sm-12 col-md-4">
      <%= render 'shared/arc', color: 'red', percentage: (@results[:incorrect] / @attempts_count.to_f) * 100, text: 'Incorrect' %>
    </div>
    <div class="col-sm-12 col-md-4">
      <%= render 'shared/arc', color: 'grey', percentage: (@results[:unsure] / @attempts_count.to_f) * 100, text: 'Unsure' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-5">
      <h3>Attention students</h3>
      <% @results_by_student.each do |result| %>
        <p><%= result[:student].first_name %>:
          <%= result[:results][:correct] %> | <%= result[:results][:incorrect] %> | <%= result[:results][:unsure] %>
        </p>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-5">
      <h3>Attention cards</h3>
      <% @results_by_card.each do |result| %>
        <p><%= result[1][:card].question %>:
          <%= result[1][:results][:correct] %> | <%= result[1][:results][:incorrect] %> | <%= result[1][:results][:unsure] %>
        </p>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-2">
      <h3>Deck info</h3>
      <p>Deck created: <%= time_ago_in_words(@deck.created_at) %> ago</p>
    </div>
  </div>
</div>


