<div class="container mx-auto">
  <div class="sections">
    <div class="row mx-0">
      <h1><span>My Reminders</span></h1>
      <div class="feed-container">
        <% @todo_items.each do |item| %>
          <div class="feed-item">
            <%= item.name %>
            <% if item.completed %>
              Complete
            <% else %>
              Mark as done
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
