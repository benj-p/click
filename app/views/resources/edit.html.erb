<div class="container">
  <h1><span> Edit Resource: <%= @resource.name %> </span> </h1>
  <div class="row">
    <%= simple_form_for [@curriculum, @deck, @resource], :method => :patch do |f| %>
      <div class="col-12 col-md-6">
        <%= f.input :name %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :text %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :url %>
      </div>
      <div class="col-md-12">
        <%= f.submit "Edit Resource"%>
      </div>
    <% end %>
  </div>
</div>
