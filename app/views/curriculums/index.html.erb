
  <div class="container mx-auto">
    <div class="sections">
      <div class="row mx-0">
        <h1><span>My Sections</span></h1>
      </div>
      <% @feed_events.each do |feed_event| %>
        <%= feed_event.title %>
      <% end %>
      <% @curriculums.each do |curriculum| %>
        <div class="row mx-0">
          <h3><%= curriculum.name %></h3>
          <div class="col-12">
          <div class="cards">
          <% curriculum.sections.first(4).each do |section| %>
            <div class="card-rating">
              <div class="card">
                <div class="background-image" style="background-image: url(https://picsum.photos/400)">
                </div>

                <div class="kind-of-container">
                  <div class="description">
                    <h2><%= link_to "Section #{section.name}", section_path(section) %></h2>
                    <p> </p>
                  </div>

                  <div class="avatars">
                    <img src="https://www.gannett-cdn.com/presto/2018/11/02/PMOR/b8cfb6be-d5d7-4c36-8f2e-16acb2d38eaf-MissingMorris1.jpg?width=534&height=712&fit=bounds&auto=webp" class="img-circle">
                    <img src="https://www.gannett-cdn.com/presto/2018/11/02/PMOR/b8cfb6be-d5d7-4c36-8f2e-16acb2d38eaf-MissingMorris1.jpg?width=534&height=712&fit=bounds&auto=webp" class="img-circle">
                  </div>
                </div>

              </div>

              <div class="p-bar">
                <div class="p-bar-margin">
                  <div class="progress" style="height: 10px">
                    <div class="progress-bar progress-bar-striped bg-success progress-bar-margin" role="progressbar" style="width: 20%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
        </div>
      <% end %>
    </div>
    <div class="row curriculums" hidden>
     <h1><span>My Curriculums</span></h1>
      <div class="col-12">
      <div class="cards">
        <% @curriculums.each do |curriculum| %>
          <div class="card">
            <%=curriculum.name  %>
            <div class="background-image" style="background-image: url(https://picsum.photos/400)">
            </div>
            <div class="kind-of-container">
              <div class="description">
                <% curriculum.decks.each do |deck|%>
                  <h2><%= link_to "#{deck.name}", curriculum_deck_cards_path(curriculum, deck) %></h2>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

